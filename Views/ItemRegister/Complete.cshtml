@using WebApp_Exercise_Answer.Presentations.ViewModels
@model ItemRegisterViewModel
@{
    ViewData["Title"] = "商品登録（完了）";
}
<h2 class="text-center mt-4">@ViewData["Title"]</h2>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-sm-8 text-center">

            @* 登録完了メッセージ *@
            <div class="alert alert-success" role="alert">
                商品の登録が完了しました。
            </div>

            <table class="table table-hover">
                <tbody>
                    @* 登録した商品情報を表示 *@
                    <tr>
                        <td class="fw-bold">
                            @Html.DisplayNameFor(m => m.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => m.Name)
                        </td>
                    </tr>

                    <tr>
                        <td class="fw-bold">
                            @Html.DisplayNameFor(m => m.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(m => m.Price)
                        </td>
                    </tr>

                    <tr>
                        <td class="fw-bold">
                            @Html.DisplayNameFor(m => m.Stock)
                        </td>
                        <td>
                            @Html.DisplayFor(m => m.Stock)
                        </td>
                    </tr>

                    <tr>
                        <td class="fw-bold">
                            @Html.DisplayNameFor(m => m.CategoryName)
                        </td>
                        <td>
                            @Html.DisplayFor(m => m.CategoryName)
                        </td>
                    </tr>
                </tbody>
            </table>

            @* 続けて登録 *@
            <a asp-action="Enter"
               asp-controller="ItemRegister"
               class="btn btn-primary mt-3">続けて登録する</a>

            @* メニューに戻る *@
            <a asp-action="Index"
               asp-controller="Home"
               class="btn btn-secondary mt-3 ms-2">メニューに戻る</a>
        </div>
    </div>
</div>
