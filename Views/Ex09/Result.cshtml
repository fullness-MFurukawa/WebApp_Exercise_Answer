@model Exercise07Form
@{
    ViewData["Title"] = "演習-09 HTML Formを作成するタグヘルパーを利用する";
}
<h2>@ViewData["Title"]</h2>
<div class="d-flex justify-content-center">
    <h3>
        @{
            @* 出力する文字列を作成する *@
            var result =$"{Model.Value1} + {Model.Value2} = {Model.Answer}";
        }
        @* 文字列をHTMLに出力する *@
        @result
    </h3>
</div>
<div class="d-flex justify-content-center">
    <form asp-controller="Exercise09" asp-action="Back" method="get">
        <button type="submit" class="btn btn-primary">戻る</button>
    </form>
</div>