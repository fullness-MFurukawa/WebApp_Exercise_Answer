@model Exercise07Form
@{
    ViewData["Title"] = "演習-09 HTML Formを作成するタグヘルパーを利用する";
}
<h2>@ViewData["Title"]</h2>
<div class="d-flex justify-content-center">
    <form asp-controller="Exercise09" asp-action="Result" method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3 d-flex align-items-center">
            <label asp-for="Value1" class="form-label me-2" style="min-width:80px;"></label>
            <input asp-for="Value1" class="form-control" />
        </div>
        <div class="mb-3 d-flex align-items-center">
            <label asp-for="Value2" class="form-label me-2" style="min-width:80px;"></label>
            <input asp-for="Value2" class="form-control" />
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">計算</button>
        </div>
    </form>
</div>